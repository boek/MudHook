@model IEnumerable<MudHook.Core.Post>

@{
    ViewBag.Title = "Index";
}
<h1>
    Posts
    @Html.ActionLink("Create a new post", "Add")
</h1>
<section class="content">
	@if (Model.Count() > 0)
     {
        <ul class="list">
	        @foreach (var p in Model)
            {
	        <li>
	            <a href="@Url.Action("Edit", new{ id = @p.Id })">
	                <strong>@p.Title</strong>
	                <span>Created <time>@p.Created.ToString("dd MMM yyyy")</time> 
	                by @p.Author</span>
	            
	                <i class="status">@p.Status</i>
	            </a>
	        </li>
            }
        </ul>
     }
     else
     {
        <p><a href="#">No posts just yet. Why not write a new one?</a></p>
     }
</section>
