<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Themes/default/css/default.css")" rel="stylesheet" type="text/css" />        
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>      
        <script>var base = "@Url.Content("~/Themes/default/")";</script>  
        <script src="@Url.Content("~/Themes/default/js/main.js")" type="text/javascript"></script>
        <link rel="shortcut icon" href="@Url.Content("~/Themes/Default/images/favicon.png")">

        <!--[if lt IE 9]>
			<script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->

        <meta name="viewport" content="width=device-width">
	    <meta name="generator" content="MudHook 0.0.1">

        <meta property="og:title" content="SITENAME">
	    <meta property="og:type" content="website">
	    <meta property="og:url" content="ABSOLUTEURL">
	    <meta property="og:image" content="img/og_image.gif">
	    <meta property="og:site_name" content="SITENAME">
	    <meta property="og:description" content="SITE DESCRIPTION">
        
		<!-- Custom CSS -->
        @RenderSection("CSS", required: false)    		
    		
    	<!--  Custom Javascript -->
    	@RenderSection("JS", required: false)
		
</head>

<body>
	<form id="search" action="SEARCH" method="post">
		<input type="search" name="term" placeholder="To search, type and hit enter&hellip;" value="SEARCH TERM">
	</form>
	
	<header id="top">
		<div class="wrap">
				
			<a id="logo" href="@Url.RouteUrl("page", new{slug = @MetaData.HomePage})">@MetaData.SiteName</a>				
            @Html.Action("RenderNavigation")
            
		</div>
	</header>    

    @RenderBody()

    <div class="wrap">
            <footer id="bottom">
                <small>&copy; @DateTime.Now.Year @MetaData.SiteName. All rights reserved.</small>
                    
                <ul role="navigation">
                    <li><a href=#">RSS</a></li>         
                    @if (!string.IsNullOrEmpty(MetaData.TwitterAccount))
                    { 
                        <li><a href="http://twitter.com/@MetaData.TwitterAccount/">@@@MetaData.TwitterAccount</a></li>                                        
                    }
                    <li>@Html.ActionLink("Admin Area", "Dashboard", "Admin")</li>
                   
                    <li><a href="/" title="Return to my website.">Home</a></li>                    
                </ul>
                
                <a id="attribution" title="Powered by Anchor CMS" href="anchorcms.com">Powered by Anchor CMS</a>
            </footer>           
        </div>
    </body>
</html>
</body>
</html>
